<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import hi.flappybird.vidmot.MainMenuController?>

<VBox alignment="CENTER" prefHeight="585" prefWidth="450" spacing="30" style="-fx-background-color: #FFFAA0;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hi.flappybird.vidmot.MainMenuController">

  <Label fx:id="highScoreLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="High Score: 0" />

  <Button onAction="#switchToGame" prefHeight="60" prefWidth="200" style="-fx-background-color: #FFFAA0; -fx-border-color: black;" text="PLAY" textFill="#ff8bf2">
    <font>
      <Font size="40.0" />
    </font>
  </Button>
   <Button fx:id="birdsButton" text="Birds" onAction="#onBirds" prefHeight="35.0" prefWidth="84.0" >
      <font>
         <Font size="18.0" />
      </font>
   </Button>
   <Button fx:id="themesButton" text="Themes" onAction="#onThemes">
      <font>
         <Font size="18.0" />
      </font>
   </Button>
</VBox>
